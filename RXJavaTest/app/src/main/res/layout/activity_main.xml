<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rxjavatest.MainActivity">

    <Button
        android:id="@+id/main_activity_hello_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello RxJava"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_activity_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_activity_rxthread_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread Test"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/main_activity_thread_manager_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IO Thread to Main Thread"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/main_activity_map_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_activity_flat_map_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flat Map"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_activity_concat_map_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Concat Map"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/main_activity_zip_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zip"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_activity_why_back_pressure_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Why we use backPressure"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_activity_fix_oom_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BackPressure"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_activity_back_pressure_rx_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BackPressure"
        android:textAllCaps="false"
        />
    <TextView
        android:id="@+id/main_activity_test_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
